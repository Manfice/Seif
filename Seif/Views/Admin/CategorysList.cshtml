@model IEnumerable<Seif.Models.SeifData.Catalog>
@{
    ViewBag.Title = "CategorysList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CategorysList</h2>
@foreach (var item in Model)
{
    @Html.ActionLink(item.Title,"CatData","Admin",new {id=item.Id}, null)
}
<h1>@ViewBag.msg</h1>
@using (Html.BeginForm("Category", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Label("Title")
    @Html.TextBox("Title")<br />
    @Html.Label("Description")
    @Html.TextArea("Descroption")<br />
    @Html.Label("HtmlDescr")
    @Html.TextArea("HtmlDescr")<br/>
    <input type="submit" value="Add"/>
}

